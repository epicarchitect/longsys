<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout">

    <TextView style="@style/TitleText"
        android:gravity="center"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:text="Хотите оценить\n приложение в Play Market?"/>

    <TextView style="@style/SecondaryText"
        android:gravity="center"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:text="Мы читаем все отзывы и по возможности\n стараемся учесть Ваши пожелания в новых версиях Программы!"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/GreenButton"
        android:layout_marginTop="@dimen/big_margin"
        android:id="@+id/yesButton"
        android:layout_gravity="center"
        android:text="Да, хочу оценить!"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/BlueBorderlessButton"
        android:visibility="gone"
        android:layout_margin="@dimen/big_margin"
        android:id="@+id/laterButton"
        android:layout_gravity="center"
        android:text="Напомнить позже"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/RedBorderlessButton"
        android:visibility="gone"
        android:layout_margin="@dimen/big_margin"
        android:id="@+id/noButton"
        android:layout_gravity="center"
        android:text="Нет, Не хочу."/>

</LinearLayout>