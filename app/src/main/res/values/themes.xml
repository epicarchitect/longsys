        <item name="android:dialogTheme">@style/BlueDarkDialog</item>
        <item name="android:timePickerDialogTheme">@style/BlueDarkPickerDialog</item>
        <item name="android:datePickerDialogTheme">@style/BlueDarkPickerDialog</item>
