<resources>

    <style name="Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">#222</item>
        <item name="colorPrimaryDark">#333</item>
        <item name="colorSecondary">#AAA</item>
        <item name="android:textColor">#fefefe</item>
    </style>

    <!-- BASE THEMES -->

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#DCDCDC</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="colorSecondary">#555</item>
        <item name="android:textColor">#333</item>
        <item name="android:dialogTheme">@style/LightDialog</item>
        <item name="android:timePickerDialogTheme">@style/LightPickerDialog</item>
        <item name="android:datePickerDialogTheme">@style/LightPickerDialog</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">#222</item>
        <item name="colorPrimaryDark">#333</item>
        <item name="colorSecondary">#AAA</item>
        <item name="android:textColor">#fefefe</item>
        <item name="android:dialogTheme">@style/DarkDialog</item>
        <item name="android:timePickerDialogTheme">@style/DarkPickerDialog</item>
        <item name="android:datePickerDialogTheme">@style/DarkPickerDialog</item>
    </style>

    <style name="LightDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimaryDark">#FFF</item>
        <item name="android:windowBackground">@drawable/white_block</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSecondary">#555</item>
        <item name="android:textColor">#333</item>
        <item name="android:timePickerDialogTheme">@style/LightPickerDialog</item>
        <item name="android:datePickerDialogTheme">@style/LightPickerDialog</item>
    </style>

    <style name="DarkDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimaryDark">#333</item>
        <item name="android:windowBackground">@drawable/dark_block</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSecondary">#AAA</item>
        <item name="android:textColor">#fefefe</item>
        <item name="android:timePickerDialogTheme">@style/DarkPickerDialog</item>
        <item name="android:datePickerDialogTheme">@style/DarkPickerDialog</item>
    </style>

    <style name="LightPickerDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/white_block</item>
    </style>

    <style name="DarkPickerDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dark_block</item>
    </style>

    <!-- BLUE THEMES -->

    <style name="BlueLightTheme" parent="LightTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:dialogTheme">@style/BlueLightDialog</item>
